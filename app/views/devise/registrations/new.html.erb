<div class="container-login">
  <div class="container-local">
    <h2>Inscription</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "Email",
                    input_html: { class: "input-login", autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    label: "Mot de passe",
                    hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                    input_html: { class: "input-login", autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: "Confirmer votre mot de passe",
                    input_html: { class: "input-login", autocomplete: "new-password" } %>
      </div>

      <div class="form-actions button-center">
        <%= f.button :submit, "Je m'inscris", class:"button-connexion"%>
      </div>
    <% end %>
  </div>
</div>
